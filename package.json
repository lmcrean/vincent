{
  "name": "vincent-anki",
  "version": "0.3.0",
  "description": "AI image generator for Anki flashcards using Gemini API",
  "keywords": [
    "anki",
    "flashcards",
    "ai",
    "images",
    "gemini",
    "education"
  ],
  "bin": {
    "vincent": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && node build/add-shebang.js",
    "dev": "tsx src/cli.ts",
    "watch": "tsc -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "cd e2e && npm test",
    "test:e2e:happy": "cd e2e && npm test -- tests/happy-path.test.ts",
    "test:e2e:happy:2": "cd e2e && npm test -- tests/happy-path-i2.test.ts",
    "test:e2e:watch": "cd e2e && npm run test:watch",
    "test:e2e:coverage": "cd e2e && npm run test:coverage",
    "test:all": "npm test && npm run test:integration && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build && npm test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@gradio/client": "^1.0.0",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.0.0",
    "memfs": "^4.0.0",
    "msw": "^2.0.0",
    "tmp-promise": "^3.0.3",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vincent-anki.git"
  },
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/vincent-anki#readme"
}
